<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <% @messages.each do |b| %>
      <div class="card well" style="max-width: 50rem;">
        <% from_user = User.find(b.from_id) %>
        <div class="card-header">
          送信元：
          <%= link_to "#{from_user.name} @ #{from_user.unique_name}", user_path(from_user) %>
        </div>
        <div class="card-body">
            コメント：<%= b.content %>
          <div class="text-right">
            <%= b.created_at %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
