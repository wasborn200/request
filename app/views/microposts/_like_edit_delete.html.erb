<li class="list-group-item micropost_function">
  <div class="row">
    <span class="col-sm-4 likecount">
      いいねの数：<%= @micropost.liked_users.count %>
    </span>
    <% if current_user?(@micropost.user) %>
    <div class="col-sm-2">
      <%= link_to "編集", edit_micropost_path(@micropost), class: "btn btn-primary h-20px" %>
    </div>
    <div class="col-sm-2">
      <%= link_to "削除", @micropost, method: :delete,
      data: { confirm: "投稿を削除してもよろしいですか?"}, class: "btn btn-danger h-25px" %>
    </div>
    <% end %>
  </div>
</li>
