<div id="micropost-<%= micropost.id %>">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-primary">
      <%= link_to gravatar_for(micropost.user, size: 40), micropost.user %>
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      <span><%= link_to "@ #{current_user.unique_name}", micropost.user %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      </span>
    </li>
    <li class="list-group-item">
      <span class="title"><%= link_to micropost.title, micropost %></span>
      <span class="content">
        <%= micropost.content %>
        <% if micropost.picture? %>
        <% if micropost.picture.file.content_type.include?('image/') %>
        <%= image_tag micropost.picture.url(:thumb) %>
        <% elsif micropost.picture.file.content_type.include?('audio/') %>
        <%= audio_tag micropost.picture.url, controls: true if micropost.picture? %>
        <% else %>
        <%= video_tag micropost.picture.url, width: "30%", height: "30%",
        controls: true, autobuffer: true %>
        <% end %>
        <% end %>
      </span>
    </li>
    <li class="list-group-item micropost_function">
      <div class="row">
        <span class="col-sm-4 likecount">
          いいねの数：<%= micropost.liked_users.count %>
        </span>
        <% if current_user?(micropost.user) %>
        <div class="col-sm-2">
          <%= link_to "編集", edit_micropost_path(micropost), class: "btn btn-primary h-20px" %>
        </div>
        <div class="col-sm-2">
          <%= link_to "削除", micropost, method: :delete,
          data: { confirm: "投稿を削除してもよろしいですか?"}, class: "btn btn-danger h-25px" %>
        </div>
        <% end %>
      </div>
    </li>
  </ul>
</div>
