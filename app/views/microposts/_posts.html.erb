<li class="list-group-item bg-primary">
  <%= link_to gravatar_for(@micropost.user, size: 40), @micropost.user %>
  <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
  <span class="user"><%= link_to "@ #{@micropost.user.unique_name}", @micropost.user.unique_name %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
  </span>
</li>
<li class="list-group-item">
  <span class="title"><%= link_to @micropost.title, @micropost %></span>
  <span class="content">
    <%= @micropost.content %>
    <% if @micropost.picture? %>
    <% if @micropost.picture.file.content_type.include?('image/') %>
    <%= image_tag @micropost.picture.url(:thumb) %>
    <% elsif @micropost.picture.file.content_type.include?('audio/') %>
    <%= audio_tag @micropost.picture.url, controls: true if @micropost.picture? %>
    <% else %>
    <%= video_tag @micropost.picture.url, width: "30%", height: "30%",
    controls: true, autobuffer: true %>
    <% end %>
    <% end %>
  </span>
</li>
