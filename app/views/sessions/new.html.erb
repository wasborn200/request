<% provide(:title, "ログイン") %>
<div class="row">
  <div class="col-md-12 pagename">
    <h3 class="pagetitle">ログイン</h3>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= link_to "（パスワードを忘れた方はこちら）", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を記録する</span>
      <% end %>

      <%= f.submit "ログインする", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "新しくアカウントを作成する", signup_path %>
    <div class="row">
      <div class="col-md-12 pagename">
        <br>
        <h3 class="pagetitle">簡単ログイン</h3>
      </div>
      <div class="col-sm-12">
        <%= form_for(:session, url: login_path) do |f| %>
          <%= f.hidden_field :email, value: "sample-1@collabrequest.com" %>
          <%= f.hidden_field :password, value: "password" %>
          <%= f.submit "簡単ログインする", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
