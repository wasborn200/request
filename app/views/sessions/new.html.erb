<% provide(:title, "ログインする") %>
<div class="row">
  <div class="col-md-12 pagename">
    <h3 class="pagetitle">ログインする</h3>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= link_to "（パスワードを忘れた方はこちら）", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン情報を記録する</span>
      <% end %>

      <%= f.submit "ログインする", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "新しくアカウントを作成する", signup_path %>
  </div>
</div>
